.wrapper
  %h1
    編集する
  = form_for @sell, url: "/users/#{@sell.user_id}/sells/#{@sell.id}" do |f|

    = f.text_field :name, placeholder: '商品名', autocomplete: "off", value: "#{@sell.name}"

    = f.text_field :price, placeholder: '金額', autocomplete: "off", value: "#{@sell.price}"

    = f.file_field :image, value: "#{@sell.image}"
    = f.hidden_field :image_cache
    = f.submit '変更'