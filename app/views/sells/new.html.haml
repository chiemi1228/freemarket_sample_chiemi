%h3
  出品する
= form_for user_sells_path do |f|

  .chat-group-form__field
    .chat-group-form__field--left
    .chat-group-form__field--right
      = f.text_field :name, class: 'chat__group_name chat-group-form__input', placeholder: '商品名', autocomplete: "off"

  .chat-group-form__field.clearfix
    .chat-group-form__field--left
    .chat-group-form__field--right
      .chat-group-form__search.clearfix
        %input#user-search-field.chat-group-form__input{ placeholder: "金額", type: "text", autocomplete: "off"}
        #user-search-result
  .chat-group-form__field.clearfix
    = f.file_field :image, class: 'hidden', id: "message_image"

  .chat-group-form__field.clearfix
    .chat-group-form__field--left
    .chat-group-form__field--right
      = f.submit '出品', class: 'chat-group-form__action-btn'